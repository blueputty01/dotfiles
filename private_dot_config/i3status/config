# i3status configuration file
# See "man i3status" for documentation.

general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

# Display system load
order += "load"

load {
        format = "%1min"
}

# Display memory usage
order += "memory"

memory {
        format = "ram %used"
}

# Display disk usage
# order += "disk /"

disk "/" {
        format = "disk %used"
}

# Display wireless information
order += "wireless wlp3s0"

wireless wlp3s0 {
        format_up = "%quality %essid"
        format_down = "offline"
}

# Display battery information
order += "battery 0"

battery 0 {
        format = "%status %percentage %remaining"
        last_full_capacity = true
}

# Display clock
order += "time"

time {
        format = "%b-%d %H:%M"
}

order += "volume master"

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"

}
